<div class="content">
	                     
<div class="clearfix">
  <div class="row-fluid">


    <% content_for :side_body do %>
      <%= raw @page.content_for(:side_body) %>
    <% end %>

    <% content_for :body do %>

      <%= form_tag refinery.search_path do -%>
        <%= text_field_tag :query, {}, {:type => "search",
                                        :placeholder => "Buscar",
                                        :value => (params[:query] if params[:query])} %>
        <%= submit_tag 'Go' %>
      <% end %>

      <!--Searching by speciality-->
      <%#= form_tag refinery.find_all_doctors_by_speciality_path do %>
        <%#= select_tag "find_speciality_doctors", options_for_select(@all_doctor_speciality,@selected_speciality_doctors),
											 :prompt => "Seleccione la especialidad...",
											 :id => "" %>
											
        <%#= submit_tag "Search" %>
      <%# end %>

       <%#= doctor_index %>

      <!--Searching by branch-->
      <%= form_tag refinery.find_all_doctors_by_branch_path do %>
        <%= select_tag "find_branch_doctors", options_for_select(@all_doctor_branch, @selected_branch_doctors),
											 :prompt => "Seleccione la especialidad...",
											 :id => "" %>
											
      <%= submit_tag "Search" %> 
      <% end %>

			 <hr>
      <% @doctors.each do |doctor| %>

        <div class="span3">
          <p><%= image_fu doctor.dr_img, '120x120' %></p>
        </div>

        <div class="span8">
          <p><strong><%= doctor.prefix + ' ' + doctor.full_name %></strong>
            <br>
            <%= doctor.specialty %>
          </p>

          <p><strong>Horario: </strong><%= doctor.schedule %> |
            <strong>Consultorio: </strong><%= doctor.location %><br><br>
            <%= link_to "BiografÃ­a", refinery.doctors_doctor_path(doctor), class: "btn btn-mini btn-primary" %>
          </p>
        </div>
        <div class="clearfix"></div>

        <hr>

        <%#= link_to doctor.prefix, refinery.doctors_doctor_path(doctor) %>

      <% end %>
      <%= will_paginate @doctors %>

    <% end %>

    <%= render '/refinery/content_page' %>
  </div>
</div>

</div>
<!--Content Section One-->
  <section id="blog">
  	<div class="container">
  		<div class="row-fluid">
      <div class="span12">
        
        <!--Bread Crumbs-->
        <ul class="breadcrumb">
          <li><a href="#">Home</a> <span class="divider">/</span></li>
          <li><a href="#">Blog</a> <span class="divider">/</span></li>
          <li class="active">Blog Article Title</li>
        </ul>
      </div>
    </div>
    
    <div class="row-fluid"
  			
  			<!--Blog Article Container-->
  			<div class="span9 article-container">
  				
  				<!--Article One -->
  				<div class="row-fluid blog-article">
	    			<div class="span2 text-center">
             </div>
	    			
	    			<div class="span10">
						<h2>Consuta con nuestro especialistas</h2>
							<%= form_tag refinery.find_all_doctors_by_branch_path do %>
				        <%= select_tag "find_branch_doctors", options_for_select(@all_doctor_branch, @selected_branch_doctors),
															 :prompt => "Seleccione la especialidad...",
															 :class => 'input-block-level',
															 :id => "" %>

				      <br>
							<%= submit_tag "Buscar", :class => "btn-success btn-large" %> 
				      <% end %>
				      <hr>
	
							<% @doctors.each do |doctor| %>

				        <div class="span2">
				          <div class="image_border">
											<%= link_to (image_fu doctor.dr_img, '100x100'), refinery.doctors_doctor_path(doctor) %></div>
				        </div>

				        <div class="span8">
				          <h3 class="blue">
									<%= link_to doctor.prefix,  refinery.doctors_doctor_path(doctor),    :class => "blue" %>
									<%= link_to doctor.full_name,  refinery.doctors_doctor_path(doctor), :class => "blue" %>
									</h3>
									<p><strong><%= link_to doctor.specialty,  refinery.doctors_doctor_path(doctor), :class => "blue" %></strong></p>									
									
				          <small>Horario: <%= doctor.schedule %><br>Consultorio: <%= doctor.location %></small>
				        </div>
				        <div class="clearfix"></div>

				        <hr>

				      <% end %>
						  <%= will_paginate @doctors %>
				      

	    			</div>
  				</div><!--End Article-->
  				
  			</div><!--End Blog Article Container-->
  			
  			
  			<!--Right Side Bar-->
  			<div class="span3 sidebar-container">
					<hr>
					<%= raw @page.content_for(:side_body) %>
  				<hr>
  				
					
					
				
  			</div><!--End Span-->
  			
  		</div>
  	</div>
  </section>
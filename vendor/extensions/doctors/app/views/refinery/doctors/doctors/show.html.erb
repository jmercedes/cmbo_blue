<!--Content Section One-->
  <section id="blog">
  	<div class="container">
  		<div class="row-fluid">
      <div class="span12">
        
        <!--Bread Crumbs-->
        <ul class="breadcrumb">
          <li><a href="#">Home</a> <span class="divider">/</span></li>
          <li><a href="#">Blog</a> <span class="divider">/</span></li>
          <li class="active">Blog Article Title</li>
        </ul>
      </div>
    </div>
    
    <div class="row-fluid"
  			
  			<!--Blog Article Container-->
  			<div class="span9 article-container">
  				
  				<!--Article One -->
  				<div class="row-fluid blog-article">
	    			<div class="span2 text-center">
             </div>
	    			
	    			<div class="span10">
							<div class="span4"><%= image_fu @doctor.dr_img, '150x150', :class => "image_border"%></div>

							<div class="span6">
								 <h2><%= @doctor.prefix + ' ' + @doctor.full_name %></h2>
								 <h4><%= @doctor.specialty %></h4>
								 <p><strong>Horario: </strong><br><%=raw @doctor.schedule %><br></p>
						     <p><strong>Consultorio:</strong><br><%=raw @doctor.location %></p>
						     <strong>Biograf√≠a:</strong><%=raw @doctor.bio %>
						    
							</div>
							<hr>

	    			</div>

  				</div><!--End Article-->
  				
  			</div><!--End Blog Article Container-->
  			
  			
  			<!--Right Side Bar-->
  			<div class="span3 sidebar-container">
					<hr>
					<%= raw @page.content_for(:side_body) %>
  				<hr>
  				
					
					
				
  			</div><!--End Span-->
  			
  		</div>
  	</div>
  </section>
<!--Main Content-->
<section id="content">
  <div class="container">
    <div class="row-fluid">
      <div class="span12">
        
        <!--Bread Crumbs-->
        <ul class="breadcrumb">
          <li><a href="#">Home</a> <span class="divider">/</span></li>
          <li class="active">Contact</li>
        </ul>
      </div>
    </div>
    
    <div class="row-fluid">
      <div class="span12">
			<%= raw @page.content_for(:side_body) %>
      </div>
    </div>
    
    <div class="row-fluid">
            <div class="row-fluid"> 
							    <%= form_for [refinery, :inquiries, @inquiry] do |f| %>
							      <%= render :partial => "/refinery/admin/error_messages",
							                 :locals => {
							                 :object => @inquiry,
							                 :include_object_name => true
							                 } %>

										<div class="span4">
											<div class="control-group">  
			                  <div class="controls">
				  								<%= f.text_field :name,
																					 :class => 'input-block-level',
																					 :required => 'required',
																					 :placeholder => t('name', :scope => 'activerecord.attributes.refinery/inquiries/inquiry') %>                                                              
			                  </div>  
			                </div>
											<div class="control-group">  
			                  <div class="controls">
				  								<%= f.text_field :phone,
																					 :class => 'input-block-level',
																					 :placeholder => t('phone', :scope => 'activerecord.attributes.refinery/inquiries/inquiry') %>
			                  </div>  
			                </div>  
											<div class="control-group">  
			                  <div class="controls">
							          <%= f.email_field :email,
																					:class => 'input-block-level',
																					:required => 'required',
																					:placeholder => t('email', :scope => 'activerecord.attributes.refinery/inquiries/inquiry') %>			                  				
												</div>                                                                                                                                                               	
			                </div>  
										</div> <!-- end of span4 -->
										
										<div class="span7">
											
											<div class="control-group">  
		                    <div class="controls">  
		                     	 <%= f.text_area :message,
																					 :rows => 8,
																					 :required => 'required',
																					 :class => 'input-block-level',
																					 :placeholder => t('message', :scope => 'activerecord.attributes.refinery/inquiries/inquiry') %>  
		                    </div>
		  								</div>
							          <div class="text-right">  
		  									<%= f.submit t('.send'), :class => "btn btn-primary" %>
											 <div class="actions">
							        	<%= link_to t('.privacy_policy'),
																	"/pages/privacy-policy",
																	:id => "privacy_link" if Refinery::Inquiries.show_contact_privacy_link %>
							      	 </div>

		                   </div>
		                
                   </div>
							    
							   <% end %>

      </div><!--End Row-->

  		    
  </div>
</section>  